import React, { useState } from "react";

const InquiryForm = ({ showInquiryModal, closeModal, submitInquiry }) => {
  const [userInquiry, setUserInquiry] = useState({
    name: "",
    email: "",
    contact: "",
    message: "",
    inquiryType: "",
    spaceType: "",
    officeSpace: "",
    sizeRequirement: "",
    extraService: "",
  });

  const handleInputChange = (e) => {
    const { name, value } = e.target;
    setUserInquiry((prev) => ({
      ...prev,
      [name]: value,
    }));
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    submitInquiry(userInquiry);
    setUserInquiry({
      name: "",
      email: "",
      contact: "",
      message: "",
      inquiryType: "",
      spaceType: "",
      officeSpace: "",
      sizeRequirement: "",
      extraService: "",
    });
    closeModal();
  };

  if (!showInquiryModal) return null;

  return (
    <div className="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50">
      <div className="bg-white rounded-xl shadow-2xl w-full max-w-5xl flex overflow-hidden">
        
        {/* Logo and Tagline Section */}
        <div className="bg-white p-6 flex flex-col justify-between w-1/3 border-r">
          <div className="flex flex-col justify-center items-center">
            <img
              src="/images/logo.png"
              alt="PRIME Logo"
              className="w-50 h-auto opacity-90"
            />
            {/* Image below the logo with larger size */}
            <div className="mt-4 w-full flex justify-center">
              <img
                src="/images/inquiry.png"  // Path to the inquiry image
                alt="Inquiry"
                className="w-full max-w-[300px] h-auto object-contain"  // Adjust size and ensure it maintains aspect ratio
              />
            </div>
          </div>
          <div className="mt-6 border-t pt-4 text-center">
            <p className="text-gray-600 text-sm font-medium leading-tight">
              <span className="block text-[#003366] text-md font-bold mb-1">REAL ESTATE.</span>
              <span className="block">WE ADVISE.</span>
              <span className="block">YOU ADVANCE.</span>
            </p>
          </div>
        </div>

        {/* Form Section */}
        <div className="p-8 w-2/3 overflow-y-auto max-h-[90vh]">
          <h2 className="text-2xl font-bold text-[#003366] mb-2">INQUIRE NOW</h2>
          <p className="text-gray-700 mb-4">
            Need help with your property goals? Connect with our expert team today.
          </p>

          {/* Email Address */}
          <label className="block text-sm font-medium text-gray-700 mb-1">
            Enter your email address <span className="text-red-600">*</span>
          </label>
          <input
            type="email"
            name="email"
            value={userInquiry.email}
            onChange={handleInputChange}
            placeholder="your@email.com"
            required
            className="w-full px-4 py-2 mb-4 border border-gray-400 rounded-md focus:ring-2 focus:ring-blue-400"
          />

          {/* Service Selection */}
          <label className="block text-sm font-medium text-gray-700 mb-2">
            What service do you need help with?
          </label>
          <div className="mb-4 space-y-3">
            <label className="flex items-start space-x-3">
              <input
                type="radio"
                name="inquiryType"
                value="Leasing"
                onChange={handleInputChange}
                className="mt-1"
                required
              />
              <span>
                <strong>I am looking for spaces</strong><br />
                <span className="text-sm text-gray-600">
                  Inquire about available properties from our leasing professionals.
                </span>
              </span>
            </label>

            {/* Space Type Dropdown */}
            {userInquiry.inquiryType === "Leasing" && (
              <div className="ml-6">
                <label className="block text-sm font-medium text-gray-700 mt-2 mb-1">
                  What type of space are you looking for?
                </label>
                <select
                  name="spaceType"
                  value={userInquiry.spaceType}
                  onChange={handleInputChange}
                  className="w-full px-4 py-2 border border-gray-300 rounded-md"
                  required
                >
                  <option value="">-- Select Space Type --</option>
                  <option value="Office Space">Office Space</option>
                  <option value="Retail Space">Retail Space</option>
                  <option value="Warehouse">Warehouse</option>
                  <option value="Co-working Space">Co-working Space</option>
                  <option value="Others">Others</option>
                </select>
              </div>
            )}

            <label className="flex items-start space-x-3">
              <input
                type="radio"
                name="inquiryType"
                value="Consultation"
                onChange={handleInputChange}
                className="mt-1"
                required
              />
              <span>
                <strong>I need a property consultation</strong><br />
                <span className="text-sm text-gray-600">
                  Get strategic guidance from our experienced real estate advisors.
                </span>
              </span>
            </label>
          </div>

          {/* Extra Services Section */}
          <label className="block text-sm font-medium text-gray-700 mt-6 mb-2">
            Additional Services (optional)
          </label>
          <select
            name="extraService"
            value={userInquiry.extraService}
            onChange={handleInputChange}
            className="w-full px-4 py-2 border border-gray-300 rounded-md mb-6"
          >
            <option value="">-- Select an Additional Service --</option>
            <option value="Landlord Representation">LANDLORD REPRESENTATION</option>
            <option value="Tenant Representation">TENANT REPRESENTATION</option>
            <option value="Capital Markets & Investments">CAPITAL MARKETS & INVESTMENTS</option>
            <option value="Research & Advisory">RESEARCH & ADVISORY</option>
            <option value="Design & Construction">DESIGN & CONSTRUCTION</option>
            <option value="Project Management">PROJECT MANAGEMENT</option>
          </select>

          {/* Main Form Fields */}
          <form onSubmit={handleSubmit}>
            <div className="grid grid-cols-1 gap-4">
              <input
                type="text"
                name="name"
                value={userInquiry.name}
                onChange={handleInputChange}
                placeholder="Complete Name"
                required
                className="w-full px-4 py-2 border border-gray-300 rounded-md"
              />
              <input
                type="text"
                name="contact"
                value={userInquiry.contact}
                onChange={handleInputChange}
                placeholder="Contact Number"
                required
                className="w-full px-4 py-2 border border-gray-300 rounded-md"
              />
              <input
                type="text"
                name="officeSpace"
                value={userInquiry.officeSpace}
                onChange={handleInputChange}
                placeholder="Preferred Location (e.g. Makati, Ortigas)"
                className="w-full px-4 py-2 border border-gray-300 rounded-md"
              />
              <input
                type="text"
                name="sizeRequirement"
                value={userInquiry.sizeRequirement}
                onChange={handleInputChange}
                placeholder="Size Requirement (e.g. 100 sqm)"
                className="w-full px-4 py-2 border border-gray-300 rounded-md"
              />
              <textarea
                name="message"
                value={userInquiry.message}
                onChange={handleInputChange}
                placeholder="Message"
                rows="3"
                className="w-full px-4 py-2 border border-gray-300 rounded-md"
                required
              ></textarea>
            </div>

            {/* Submit */}
            <div className="flex justify-center mt-6">
              <button
                type="submit"
                className="bg-gradient-to-r from-yellow-500 to-orange-600 text-white font-medium py-2 px-8 rounded-full shadow-md hover:scale-105 transition-transform"
              >
                Submit Inquiry
              </button>
            </div>

            <div className="text-xs text-gray-500 mt-4 text-center">
              For urgent concerns, you may call us at <strong>(+632) 8442 8888</strong>
            </div>

            <div className="mt-4 text-center">
              <button
                type="button"
                onClick={closeModal}
                className="text-sm text-gray-600 hover:text-gray-800"
              >
                Close
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  );
};

export default InquiryForm;
